{
  "openapi": "3.0.0",
  "info": {
    "title": "API auth",
    "description": "Está é uma API de teste para aprender sobre o funcionamento da técnica de refresh token",
    "version": "1.0.0",
    "termsOfService": "https://refresh-token-500.herokuapp.com/terms/",
    "contact": {
      "email": "jwesleydasilva@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://127.0.0.1:3000",
      "description": "API de desenvolvimento"
    },
    {
      "url": "https://refresh-token-500.herokuapp.com",
      "description": "API de produção"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário",
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar usuário",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Realiza o login de um usuário",
        "description": "Realiza o login de um usuário",
        "operationId": "loginUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário logado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar a sessão do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/refresh-token": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Realiza o refresh do token de um usuário",
        "description": "Realiza o refresh do token de um usuário",
        "operationId": "refreshToken",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token do usuário recriado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao recriar o token de acesso do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/courses": {
      "get": {
        "tags": [
          "Cursos"
        ],
        "summary": "Lista os cursos",
        "description": "Lista os cursos",
        "operationId": "getCourses",
        "responses": {
          "200": {
            "description": "Cursos listados com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CursosResponse"
                }
              }
            }
          },
          "401": {
            "description": "Usuário não autenticado!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorUnauthorized"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Wesley"
          },
          "email": {
            "type": "string",
            "example": "wesley@email.com"
          },
          "password": {
            "type": "string",
            "example": "1234"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "wesleyfeitosa"
          },
          "password": {
            "type": "string",
            "example": "1234"
          }
        }
      },
      "RefreshBody": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "ffc4d94f-d865-4153-8025-8f66a0e27303"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "ffc4d94f-d865-4153-8025-8f66a0e27303"
          },
          "name": {
            "type": "string",
            "example": "Wesley"
          },
          "email": {
            "type": "string",
            "example": "wesley@email.com"
          },
          "password": {
            "type": "string",
            "example": "1234"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "ffc4d94f-d865-4153-8025-8f66a0e27303"
          },
          "refreshToken": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "ffc4d94f-d865-4153-8025-8f66a0e27303"
              },
              "expiresIn": {
                "type": "number",
                "example": "3600"
              },
              "userId": {
                "type": "string",
                "example": "ffc4d94f-d865-4153-8025-8f66a0e27303"
              }
            }
          }
        }
      },
      "CursosResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number",
              "example": 123
            },
            "name": {
              "type": "string",
              "example": "Curso de programação"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "Error"
          },
          "message": {
            "type": "string",
            "example": "Erro interno"
          }
        }
      },
      "ErrorUnauthorized": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Usuário não autenticado"
          }
        }
      }
    }
  }  
}